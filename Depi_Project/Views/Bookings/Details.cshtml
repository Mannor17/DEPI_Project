@model Depi_Project.Models.Booking
@{
    Layout = "_Layout";
}

<header class="header">
    <div class="container navbar">
        <div class="brand"><div class="logo"><a href="/Home/Index">🏋️</a></div> FitConnect</div>
        <nav class="navlinks">
            <a href="/User/Dashboard">Dashboard</a>
            <a href="/User/Profile">Profile</a>
            <a href="/Account/Logout">Logout</a>
        </nav>
    </div>
</header>

<section class="section">


    <div class="container" style="max-width: 700px; margin: 50px auto;">
        <div class="card" style="padding: 24px; border-radius: 12px; box-shadow: 0 4px 16px rgba(0,0,0,0.1);">
            <div class="card-header" style="text-align: center; margin-bottom: 20px;">
                <div class="success-icon" style="font-size: 64px; color: #28a745;">✅</div>
                <h2 style="margin-top: 12px;">Booking Confirmed!</h2>
                <p>Your gym session has been booked successfully.</p>
            </div>

            <div class="card-body" style="margin-top: 20px;">
                <div style="background: #f8f9fa; padding: 16px; border-radius: 8px; margin-bottom: 24px;">
                    <h3 style="margin-bottom: 12px;">Booking Details:</h3>
                    <p>📍 <strong>Gym:</strong> @Model.Gym.Name</p>
                    <p>📅 <strong>Date:</strong> @Model.StartDate.ToString("dddd, MMMM dd, yyyy")</p>
                    <p>⏰ <strong>Time:</strong> @Model.StartDate.ToString("hh:mm tt")</p>
                    <p>💳 <strong>Payment:</strong> $@Model.Amount</p>
                    @if (Model.Trainer != null)
                    {
                        <p>🏋️ <strong>Trainer:</strong> @Model.Trainer.Name</p>
                    }
                    <p>📌 <strong>Booking Type:</strong> @Model.Type</p>
                    <p>✅ <strong>Status:</strong> @(Model.IsPaid ? "Paid" : "Pending Payment")</p>
                </div>

                <div style="display: flex; gap: 12px; justify-content: center; flex-wrap: wrap;">
                    <a href="/User/Dashboard" class="btn btn-primary" style="padding: 12px 24px; border-radius: 6px; text-decoration: none;">Go to Dashboard</a>
                    <a href="/Bookings/Create?gymId=@Model.GymId" class="btn btn-ghost" style="padding: 12px 24px; border-radius: 6px; text-decoration: none;">Book Another</a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-primary {
        background-color: #10c4cf;
        color: #fff;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-primary:hover {
            background-color: #0aa7b0;
        }

    .btn-ghost {
        background-color: transparent;
        color: #10c4cf;
        border: 2px solid #10c4cf;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-ghost:hover {
            background-color: #10c4cf;
            color: #fff;
        }
</style>
