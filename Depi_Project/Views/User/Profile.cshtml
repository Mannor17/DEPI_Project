<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>My Profile • FitConnect</title>
	<link rel="stylesheet" href="../css/style.css" />
	<style>
		.profile-layout { display: grid; grid-template-columns: 300px 1fr; gap: 24px; margin-top: 24px; }
		.profile-sidebar { text-align: center; }
		.profile-avatar { width: 80px; height: 80px; border-radius: 20px; background: var(--primary); display: grid; place-items: center; margin: 0 auto 16px; color: white; font-size: 32px; font-weight: 800; }
		.status-badge { background: var(--primary); color: white; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 700; margin: 12px 0; }
		.info-row { display: flex; align-items: center; gap: 8px; margin: 8px 0; color: var(--muted); font-size: 14px; }
		.form-group { margin-bottom: 20px; }
		.form-group label { display: block; margin-bottom: 6px; font-weight: 600; }
		.input-group { position: relative; }
		.input-group .icon { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: var(--muted); }
		.input-group .input { padding-left: 40px; }
        /* bookings list styling (only) */
.bookings-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 12px;
}

.booking-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #ffffff;
    border: 1px solid #eef2f7;
    padding: 12px 14px;
    border-radius: 10px;
    box-shadow: 0 1px 2px rgba(18, 38, 63, 0.03);
    font-size: 15px;
    color: #243142;
}

.booking-left {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.gym-name {
    font-weight: 700;
    font-size: 15px;
}

.booking-meta {
    font-size: 13px;
    color: var(--muted, #6b7280);
}

.booking-right {
    display: flex;
    align-items: center;
    gap: 10px;
}

.status {
    padding: 6px 10px;
    border-radius: 999px;
    font-size: 13px;
    font-weight: 700;
    text-transform: none;
}

/* paid / unpaid colors */
.status.paid {
    background: #e6fbf2;
    color: #0f9d58;
    border: 1px solid rgba(15,157,88,0.08);
}

.status.unpaid {
    background: #fff5f5;
    color: #d44b4b;
    border: 1px solid rgba(212,75,75,0.08);
}


	</style>
</head>
<body>
    <header class="header">
        <div class="container navbar">
            <div class="brand"><div class="logo"><a href="/Home/Index">🏋️</a></div> FitConnect</div>
            <nav class="navlinks">
                <a href="/User/Dashboard">Dashboard</a>
                <a href="/User/Profile">Profile</a>
                <a href="/Account/Logout">Logout</a>
            </nav>
        </div>
    </header>

    @model Depi_Project.Models.ViewModels.ProfileViewModel

    @{
        ViewData["Title"] = "My Profile";
    }

    <section class="section">
        <div class="container">
            <div class="profile-layout">
                <div class="card profile-sidebar">
                    <div class="profile-avatar">
                        @(
                            string.IsNullOrEmpty(Model.FullName)
                            ? "U"
                            : (Model.FullName.Length >= 2 ? Model.FullName.Substring(0, 2).ToUpper() : Model.FullName.Substring(0, 1).ToUpper())
                            )
                    </div>
                    <h3>@Model.FullName</h3>
                    <p style="color: var(--muted); margin: 4px 0;">@Model.Email</p>
                    <div class="status-badge">
                        @(Model.IsProfilePublic ? "Public Profile" : "Private Profile")
                    </div>
                    <div class="info-row">
                        <span>📋</span>
                        <span>@Model.TotalBookings bookings total</span>
                    </div>
                </div>
              <div>
                <div class="tabs" style="margin-bottom: 24px;">
                    <div class="tab active" data-target="personal">Personal Info</div>
                    <div class="tab" data-target="bookings">Bookings</div>
                </div>

            <div data-tab-panel="personal">
              <div class="card">
                            <div class="card-header">
                                <h3>Personal Information</h3>
                            </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label>Full Name</label>
                            <input class="input" asp-for="FullName" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input class="input" asp-for="Email" />
                            <span class="text-muted" style="display:block;font-size:12px">Changing email may require confirmation.</span>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Phone Number</label>
                            <input class="input" asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Profile Visibility</label>
                            <div>
                                <input type="checkbox" asp-for="IsProfilePublic" /> Public profile
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
              </div>
            </div>

                    <div data-tab-panel="bookings" style="display: none;">
                        <div class="card">
                        <div class="card-header">
                            <h3>My Bookings</h3>
                        </div>
                            <div class="card-body">
                                <div style="text-align: center; padding: 40px; color: var(--muted);">
                        @if (Model.Bookings != null && Model.Bookings.Any())
                        {
                            <ul class="bookings-list">
                               @foreach (var b in Model.Bookings)
                                 {
                                    <li class="booking-item">
                                    <div class="booking-left">
                                    <div class="gym-name">@(!string.IsNullOrEmpty(b.Gym?.Name) ? b.Gym.Name : "Gym")</div>
                                    <div class="booking-meta">@b.Type • @b.StartDate.ToString("dd MMM yyyy")</div>
                                    </div>

                                    <div class="booking-right">
                                       <span class="status @(b.IsPaid ? "paid" : "unpaid")">
                                             @(b.IsPaid ? "Paid" : "Not paid")
                                        </span>
                                    </div>
                                    </li>
                                 }
                            </ul>

                        }
                        else
                        {
                            <div style="padding:20px;color:var(--muted)">
                                <div class="card-body">
                                    <div style="text-align: center; padding: 40px; color: var(--muted);">
                                        <div style="font-size: 48px; margin-bottom: 16px;">📅</div>
                                        <h4>No bookings yet</h4>
                                        <p>Start your fitness journey by booking a session!</p>
                                        <a href="user-booking.html" class="btn btn-primary" style="margin-top: 16px;">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </div>
        </div>
    </section>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


	<script src="../js/main.js"></script>
</body>
</html>

